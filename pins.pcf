####
# TinyFPGA BX information: https://github.com/tinyfpga/TinyFPGA-BX/
####

# Left side of board
set_io --warn-no-port GRAY_OUT[0] A2
set_io --warn-no-port GRAY_OUT[1] A1
set_io --warn-no-port GRAY_OUT[2] B1
set_io --warn-no-port GRAY_OUT[3] C2
set_io --warn-no-port GRAY_OUT[4] C1
set_io --warn-no-port GRAY_OUT[5] D2
set_io --warn-no-port GRAY_OUT[6] D1
set_io --warn-no-port GRAY_OUT[7] E2

# USB
set_io --warn-no-port USBPU A3

# 16MHz clock
set_io --warn-no-port CLK B2 # input
